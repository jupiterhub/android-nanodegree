<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/abc_text_size_large_material"
        android:gravity="center_horizontal"
        android:text="@string/title"
        android:textSize="@dimen/abc_text_size_large_material" />


    <Button
        android:id="@+id/buttonSpotifyStreamer"
        style="@style/AppButton"
        android:text="@string/spotify"
        android:textAlignment="center"
        android:onClick="onClickSpotifyStreamer" />


    <Button
        android:id="@+id/buttonScoresApp"
        style="@style/AppButton"
        android:text="@string/scores"
        android:textAlignment="center"
        android:onClick="onClickScoresApp" />

    <Button
        android:id="@+id/libraryApp"
        style="@style/AppButton"
        android:text="@string/library"
        android:textAlignment="center"
        android:onClick="onClickLibraryApp" />

    <Button
        android:id="@+id/buttonBuildItBigger"
        style="@style/AppButton"
        android:padding="@dimen/abc_text_size_button_material"
        android:text="@string/build"
        android:textAlignment="center"
        android:onClick="onClickBuildItBigger" />

    <Button
        android:id="@+id/buttonXyzReader"
        style="@style/AppButton"
        android:text="@string/reader"
        android:textAlignment="center"
        android:onClick="onClickXyzReader" />


    <Button
        android:id="@+id/buttonCapstone"
        style="@style/AppButton"
        android:background="#fff03436"
        android:text="@string/capstone"
        android:textAlignment="center"
        android:onClick="onClickCapstone" />
</LinearLayout>
